
<div class="p-2 inline-block grid grid-cols-12 grid-span-4 text-white ml-20">
  <div class="col-span-5 text-right font-bold"> Animais adotados: <%= link_to 'Sim', animals_path(filter_adopted: true), :class => 'bg-red-500 hover:bg-red-800 rounded py-1 px-4' %> </div>
  <div class="col-span-1 text-center font-bold"> <%= link_to 'Não', animals_path(filter_adopted: false), :class => 'bg-green-500 hover:bg-green-800 rounded py-1 px-4' %> </div>
  <div class="col-span-5 text-left font-bold"> <%= link_to 'Todos', animals_path, :class => 'bg-blue-500 hover:bg-blue-800 rounded py-1 px-4' %> </div>
  <div class="col-span-1 left font-bold"> <%= link_to 'Cadastrar animal', new_animal_path, :class => 'bg-blue-500 hover:bg-blue-800 font-bold py-1 px-3 rounded' %> </div>
</div>
<hr>
<div class="divide-y text-blue-300">
  <% @animals.each do |animal| %>
    <div class="block p-2">
      <div class="text-center text-xl mt-1"> Nome : <%= animal.name %> </div>
      <div class="text-center text-xl mt-1"> Adotado : <%= animal.adopted %> </div>
      <div class="text-center text-xl mt-1"> Descrição curta : <%= animal.short_description %> </div>
      <div class="text-center hover:underline mt-1 font-bold"> <%= link_to 'Visualizar mais Informações.', animal_path(animal) %> </div>
    </div>
  <% end %>

</div>